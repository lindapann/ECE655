<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sam.quizqueen" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DbHelper"
            android:label="@string/app_name"></activity>
        <activity android:name=".Question"
            android:label="@string/app_name"></activity>

        <activity android:name=".ResultActivity"
            android:label="@string/app_name"></activity>

        <activity android:name=".UserManagement"
            android:label="@string/app_name"></activity>
        <activity android:name=".AddQuestion"
            android:label="@string/app_name"></activity>
        <activity android:name=".QuizManagement"
            android:label="@string/app_name"></activity>
        <activity android:name=".QuizTake"
            android:label="@string/app_name"></activity>
        <activity android:name=".Stats"
            android:label="@string/app_name"></activity>
        <activity android:name=".QuizResult"
            android:label="@string/app_name"></activity>
        <activity android:name=".AddUser"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:configChanges="orientation|keyboardHidden"></activity>
    </application>

</manifest>
