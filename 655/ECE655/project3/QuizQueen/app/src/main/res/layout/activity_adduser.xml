<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layoutUserManagement"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/bg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/buttonToMainMenu"
        android:onClick="openMain"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonToMainMenu"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"></TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/textViewBlank1" />

        <TableRow
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="User Name:"
                android:id="@+id/textViewUserName"
                android:background="#ffffff" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/editTextUserName"
                android:background="#ffffff"
                android:maxLength="12"
                android:maxLines="1"
                android:inputType="text" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/textViewBlank2" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Password:"
                android:id="@+id/textViewPassword"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/editTextPassword"
                android:background="#ffffff"
                android:password="true"
                android:maxLength="18"
                android:maxLines="1" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/textViewBlank3" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Confirm Password"
                android:id="@+id/textViewConfirmPassword"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"

                android:id="@+id/editTextConfirmPassword"
                android:background="#ffffff"
                android:password="true"
                android:maxLines="1"
                android:maxLength="18" />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/buttonAddNewUser"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

</RelativeLayout>
